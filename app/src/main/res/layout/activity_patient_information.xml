<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Patient_Information_Activity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/patientImage_patinfo"
            android:layout_width="@dimen/dim_250"
            android:layout_height="@dimen/dim_250"
            android:layout_marginTop="@dimen/dim_50"
            android:src="@drawable/account"
            app:civ_border_color="@color/black"
            app:civ_border_width="2dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/patname_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dim_30"
            android:layout_marginTop="@dimen/dim_30"
            android:fontFamily="@string/custom_bold_text1"
            android:text="PatientName :- "
            android:textColor="@color/black"
            android:textSize="@dimen/dim_45"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/patientImage_patinfo" />

        <EditText
            android:id="@+id/patname_edt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:enabled="false"
            android:fontFamily="@string/custom_bold_text1"
            android:textColor="@color/black"
            android:textSize="@dimen/dim_45"
            app:layout_constraintBottom_toBottomOf="@+id/patname_txt"
            app:layout_constraintStart_toEndOf="@+id/patname_txt"
            app:layout_constraintTop_toTopOf="@+id/patname_txt" />

        <TextView
            android:id="@+id/patage_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dim_30"
            android:fontFamily="@string/custom_bold_text1"
            android:text="Age :- "
            android:textColor="@color/black"
            android:textSize="@dimen/dim_45"
            app:layout_constraintStart_toStartOf="@+id/patname_txt"
            app:layout_constraintTop_toBottomOf="@+id/patname_txt" />

        <EditText
            android:id="@+id/patage_edt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:enabled="false"
            android:fontFamily="@string/custom_bold_text1"
            android:textColor="@color/black"
            android:textSize="@dimen/dim_45"
            app:layout_constraintBottom_toBottomOf="@+id/patage_txt"
            app:layout_constraintStart_toEndOf="@+id/patage_txt"
            app:layout_constraintTop_toTopOf="@+id/patage_txt" />

        <TextView
            android:id="@+id/patgender_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dim_30"
            android:fontFamily="@string/custom_bold_text1"
            android:text="Gender :- "
            android:textColor="@color/black"
            android:textSize="@dimen/dim_45"
            app:layout_constraintStart_toStartOf="@+id/patage_txt"
            app:layout_constraintTop_toBottomOf="@+id/patage_txt" />

        <EditText
            android:id="@+id/patgender_edt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:enabled="false"
            android:fontFamily="@string/custom_bold_text1"
            android:textColor="@color/black"
            android:textSize="@dimen/dim_45"
            app:layout_constraintBottom_toBottomOf="@+id/patgender_txt"
            app:layout_constraintStart_toEndOf="@+id/patgender_txt"
            app:layout_constraintTop_toTopOf="@+id/patgender_txt" />

        <TextView
            android:id="@+id/patdieases_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dim_30"
            android:fontFamily="@string/custom_bold_text1"
            android:text="Dieases :- "
            android:textColor="@color/black"
            android:textSize="@dimen/dim_45"
            app:layout_constraintStart_toStartOf="@+id/patgender_txt"
            app:layout_constraintTop_toBottomOf="@+id/patgender_txt" />

        <EditText
            android:id="@+id/patdieases_edt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:enabled="false"
            android:fontFamily="@string/custom_bold_text1"
            android:textColor="@color/black"
            android:textSize="@dimen/dim_45"
            app:layout_constraintBottom_toBottomOf="@+id/patdieases_txt"
            app:layout_constraintStart_toEndOf="@+id/patdieases_txt"
            app:layout_constraintTop_toTopOf="@+id/patdieases_txt"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/addtxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dim_30"
            android:fontFamily="@string/custom_bold_text1"
            android:text="Address :- "
            android:textColor="@color/black"
            android:textSize="@dimen/dim_45"
            app:layout_constraintStart_toStartOf="@+id/patdieases_txt"
            app:layout_constraintTop_toBottomOf="@+id/patdieases_txt" />

        <EditText
            android:id="@+id/addedt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:enabled="false"
            android:fontFamily="@string/custom_bold_text1"
            android:textColor="@color/black"
            android:textSize="@dimen/dim_45"
            app:layout_constraintBottom_toBottomOf="@+id/addtxt"
            app:layout_constraintStart_toEndOf="@+id/addtxt"
            app:layout_constraintTop_toTopOf="@+id/addtxt" />

        <TextView
            android:id="@+id/phonetxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dim_30"
            android:fontFamily="@string/custom_bold_text1"
            android:text="Phone Number :- "
            android:textColor="@color/black"
            android:textSize="@dimen/dim_45"
            app:layout_constraintStart_toStartOf="@+id/addtxt"
            app:layout_constraintTop_toBottomOf="@+id/addtxt" />

        <EditText
            android:id="@+id/phoneedt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:enabled="false"
            android:fontFamily="@string/custom_bold_text1"
            android:textColor="@color/black"
            android:textSize="@dimen/dim_45"
            app:layout_constraintBottom_toBottomOf="@+id/phonetxt"
            app:layout_constraintStart_toEndOf="@+id/phonetxt"
            app:layout_constraintTop_toTopOf="@+id/phonetxt" />

        <EditText
            android:id="@+id/emailedt"
            android:layout_width="@dimen/dim_450"
            android:layout_height="@dimen/dim_120"
            android:background="@android:color/transparent"
            android:enabled="false"
            android:fontFamily="@string/custom_bold_text1"
            android:textColor="@color/black"
            android:textSize="@dimen/dim_45"
            app:layout_constraintBottom_toBottomOf="@+id/emailtxt"
            app:layout_constraintStart_toEndOf="@+id/emailtxt"
            app:layout_constraintTop_toTopOf="@+id/emailtxt" />

        <TextView
            android:id="@+id/emailtxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dim_50"
            android:fontFamily="@string/custom_bold_text1"
            android:text="Email:- "
            android:textColor="@color/black"
            android:textSize="@dimen/dim_45"
            app:layout_constraintStart_toStartOf="@+id/phonetxt"
            app:layout_constraintTop_toBottomOf="@+id/phonetxt" />

        <TextView
            android:id="@+id/datetxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dim_60"
            android:fontFamily="@string/custom_bold_text1"
            android:text="Date:- "
            android:textColor="@color/black"
            android:textSize="@dimen/dim_45"
            app:layout_constraintStart_toStartOf="@+id/emailtxt"
            app:layout_constraintTop_toBottomOf="@+id/emailtxt" />

        <EditText
            android:id="@+id/dateedt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:enabled="false"
            android:fontFamily="@string/custom_bold_text1"
            android:textColor="@color/black"
            android:textSize="@dimen/dim_45"
            app:layout_constraintBottom_toBottomOf="@+id/datetxt"
            app:layout_constraintStart_toEndOf="@+id/datetxt"
            app:layout_constraintTop_toTopOf="@+id/datetxt"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/timetxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dim_30"
            android:fontFamily="@string/custom_bold_text1"
            android:text="Time:- "
            android:textColor="@color/black"
            android:textSize="@dimen/dim_45"
            app:layout_constraintStart_toStartOf="@+id/datetxt"
            app:layout_constraintTop_toBottomOf="@+id/datetxt" />

        <EditText
            android:id="@+id/timeedt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:enabled="false"
            android:fontFamily="@string/custom_bold_text1"
            android:textColor="@color/black"
            android:textSize="@dimen/dim_45"
            app:layout_constraintBottom_toBottomOf="@+id/timetxt"
            app:layout_constraintStart_toEndOf="@+id/timetxt"
            app:layout_constraintTop_toTopOf="@+id/timetxt" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>