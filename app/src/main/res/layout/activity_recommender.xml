<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Recommender_Activity">

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dim_20"
        android:fontFamily="@string/custom_simple_text1"
        android:text="Recommended Doctor"
        android:textAlignment="center"
        android:textColor="@color/Softblue_skyblue1"
        android:textSize="@dimen/dim_55"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/filter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dim_10"
        android:padding="@dimen/dim_10"
        android:text="Filter"
        android:drawableLeft="@drawable/baseline_filter_list_24"
        android:drawablePadding="@dimen/dim_10"
        android:drawableTint="@color/Softblue_skyblue1"
        android:textAlignment="center"
        android:textColor="@color/Softblue_skyblue1"
        android:background="@drawable/text_background"
        android:textSize="@dimen/dim_45"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/textView8"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvdoctorlist"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/dim_10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/filter"
        tools:listitem="@layout/doctors_card" />
</androidx.constraintlayout.widget.ConstraintLayout>